-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{class: ("hilite" if params[:sort_on?] == "title")}= link_to "Movie Title",  sort_on?: "title"
      %th Rating
      %th{class: ("hilite" if params[:sort_on?] == "release_date")}= link_to "Release Date",  sort_on?: "release_date"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path

-#  This file is app/views/movies/index.html.haml
%h1 All Movies

-# create checkboxes
= form_tag movies_path, method: :get, id: 'ratings_form' do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, @ratings.include?(rating), id: "ratings_#{rating}"
  = submit_tag 'Refresh', id: 'ratings_submit'

%table#movies
  %thead
    %tr
    -#adding links for title and release date
      %th{class: @hilite_title}
        = link_to 'Movie Title', movies_path(sorted: 'title'), id: 'title_header'
      %th Rating
      %th{class: @hilite_date}
        = link_to 'Release Date', movies_path(sorted: 'release_date'), id: 'release_date_header'
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
